<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_tela_estabelecimento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">
    <include layout="@layout/toolbar" android:id="@+id/toolbar" />

    <Button
        android:id="@+id/btn_local_incorreto"
        android:theme="@android:style/Theme.Holo"
        android:drawableLeft="@drawable/ic_error"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/txt_local_incorreto"
        android:textAlignment="center"
        android:textColor="#303F9F"
        android:textSize="25sp"
        android:background="@color/textColorPrimary"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageView
        android:id="@+id/img_logo_estabelecimento"
        android:layout_width="209dp"
        android:layout_height="209dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:contentDescription="Logo aqui" />

    <TextView
        android:id="@+id/titulo_pagina_local"
        android:layout_width="363dp"
        android:layout_height="54dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:text="@string/txt_titulo_estabelecimento"
        android:layout_gravity="center_horizontal|top"
        android:textSize="30sp"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/nome_estabelecimento"
        android:textSize="25sp"
        android:text="Carrefour Sul"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp" />

</FrameLayout>